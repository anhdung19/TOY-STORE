<!DOCTYPE html>
<html>
<head>
  <title>Shopping Cart</title>
</head>
<body>
  <h1>Your Shopping Cart</h1>
  
  <table>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Subtotal</th>
      <th>Action</th>
    </tr>
    {{#each cart}}
      <tr>
        <td>{{this.product.name}}</td>
        <td>
          <form method="POST" action="/update-cart/{{this.product._id}}">
            <input type="number" name="quantity" value="{{this.quantity}}" min="1">
            <button type="submit">Update</button>
          </form>
        </td>
        <td>{{this.product.price}}</td>
        <td>{{this.product.price * this.quantity}}</td>
        <td>
          <form method="POST" action="/remove-from-cart/{{this.product._id}}">
            <button type="submit">Remove</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </table>
  
  <a href="/checkout">Proceed to Checkout</a>
</body>
</html>
